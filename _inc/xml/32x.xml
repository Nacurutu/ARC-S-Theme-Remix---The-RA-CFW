<theme>

    <formatVersion>4</formatVersion>

<feature supported="carousel">
<view name="basic">
<image name="background" extra="true">
	<path>./../images/art/32x/bg.png</path>
	<origin>0 0</origin>
	<pos>0 0</pos>
	<size>1 1</size>
</image>
</view>

<view name="system, detailed, video, grid, basic">
<image name="background" extra="true">
	<origin>0 0</origin>
	<pos>0 0</pos>
	<size>1 1</size>
	<path>./../images/art/32x/bg.png</path>
</image>
</view>
</feature>

<view name="menu">
<menuBackground name="menubg">
	<path>./../images/art/32x/bg.png</path>
</menuBackground>
</view>


<view name="system">
<image name="ARC" extra="true">
	<origin>0 0</origin>
	<pos>0 0</pos>
	<size>1 1</size>
	<path>./_inc/images/ARC_logo_corner.png</path>
	<zIndex>12</zIndex>
</image>

</view>

<view name="basic, detailed, video, grid">
<image name="arrows" extra="true">
			<pos>0.03 0.23</pos>
			<origin>0 0</origin>
			<maxSize>0.5 0.5</maxSize>
			<path>./_inc/images/art/32x/arrows.png</path>
			<alignment>center</alignment>
			<verticalAlignment>center</verticalAlignment>
			<zIndex>20</zIndex>
		</image>

		       <helpsystem name="help">
			<origin>0 0</origin>
			<pos>0.03 0.93</pos>
			<textColor>e9e1d0</textColor>
			<iconColor>F9C207</iconColor>
			<fontPath>./_inc/fonts/space-harrier-extended.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<alignment>center</alignment>
			<verticalAlignment>center</verticalAlignment>
		
        </helpsystem> 
</view>

